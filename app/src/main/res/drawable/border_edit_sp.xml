<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item>
                <shape>
                    <gradient android:angle="360" android:endColor="#FFFFFF" android:startColor="#FFFFFF" />
                    <stroke
                        android:width="1dp"
                        android:color="#afaeae"
                        />
                    <corners android:radius="5dp" />
                    <padding android:bottom="1dp" android:left="1dp" android:right="1dp" android:top="1dp" />
                </shape>
            </item>
            <item android:right="0dp"  >
                <bitmap android:gravity="center|right" android:src="@drawable/drop_ic" />
            </item>
        </layer-list>
    </item>
</selector>